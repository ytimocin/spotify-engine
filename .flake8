[flake8]
max-line-length = 100
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    .pytest_cache,
    .mypy_cache,
    .tox,
    docs/_build,
    notebooks
ignore = 
    E203,
    E501,
    W503,
    D100,
    D104,
    D105,
    D107
per-file-ignores =
    __init__.py:F401,D104
    test_*.py:D100,D101,D102,D103
    scripts/generate_synthetic_data.py:C901
    scripts/validate_data.py:C901
    src/test_model.py:C901